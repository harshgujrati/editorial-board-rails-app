<div class="member">
  <div class="box">
    <% @final_year_members.each do |member| %>
      <div class="card u-margin-bottom-medium">
        <div class="imgBx">
           <%= image_tag member.avatar.url(:square) %>
        </div>
        <div class="details">
            <h2><%= member.name %><br><span>Final Year</span></h2>
        </div>
