<div class="contained">
  <img src=<%= post.user.avatar.url %> class="image" >
  <div style="height: 70px;" class="overlayer">
    <div class="text-name"><%= post.user.username %></div>
  </div>
</div>
      
    </div>
  </div>

  <div class="blog-body">
    <div class="blog-title">
      <h1><%= link_to post.title, post_path(post) %></a></h1>
    </div>
    <div class="blog-summary">
      <span class="blog-content"><%= truncate(strip_tags(post.content.to_s), length: 300) %></span>
    </div>
    
  </div>
  
  <div class="blog-footer">
    <ul>
      <li class="published-date"><%= post.created_at %></li>
      <% if current_user == post.user %>
          <li><%= link_to "Delete", post_path(post), class: "post-delete", method: :delete %></li>
      <% end %>
    </ul>
  </div>

</div>
 
<% end %>
 

</div>