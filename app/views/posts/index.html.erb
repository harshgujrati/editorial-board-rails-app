<%= render partial: '/layouts/header2' %>
<h1 class="heading-primary--main member-head align-center u-margin-bottom-medium u-margin-top-medium">All Posts</h1>
<div class="align-center"><a href="#" class="btn btn--grey btn--animated">Create a new post</a></div>
<% @posts.each do |post| %>
  <div class="blog-container">
  
  <div class="blog-header">
    <div class="blog-cover">
      <div class="blog-author">
        <h3><%= post.user.username %></h3>
      </div>
    </div>
  </div>

  <div class="blog-body">
    <div class="blog-title">
      <h1><a href="#"><%= post.title %></a></h1>
    </div>
    <div class="blog-summary">
      <span class="blog-content"><%= truncate(post.content, :length => 450) %></span>
    </div>
    
  </div>
  
  <div class="blog-footer">
    <ul>
      <li class="published-date"><%= post.created_at %></li>
      
    </ul>
  </div>

</div>
  
<% end %>


