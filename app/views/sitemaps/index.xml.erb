<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   <url>
      <loc><%= @host %></loc>
   </url>
   
   <url>
      <loc><%= "#{@host}#{posts_path}" %></loc>
   </url>
   <% @posts.each do |post| %>
     <url>
        <loc><%= "#{@host}/posts/#{post.id}" %></loc>
     </url>
   <% end %>
</urlset>